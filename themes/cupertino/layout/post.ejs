<article class="post">
    <div class="meta">
        <% if (!page.no_date) { %>
        <div class="date" id="date">
            <% if (page.date.month() == 0) { %>
            <span>January</span>
            <% } %>
            <% if (page.date.month() == 1) { %>
            <span>February</span>
            <% } %>
            <% if (page.date.month() == 2) { %>
            <span>March</span>
            <% } %>
            <% if (page.date.month() == 3) { %>
            <span>April</span>
            <% } %>
            <% if (page.date.month() == 4) { %>
            <span>May</span>
            <% } %>
            <% if (page.date.month() == 5) { %>
            <span>June</span>
            <% } %>
            <% if (page.date.month() == 6) { %>
            <span>July</span>
            <% } %>
            <% if (page.date.month() == 7) { %>
            <span>August</span>
            <% } %>
            <% if (page.date.month() == 8) { %>
            <span>September</span>
            <% } %>
            <% if (page.date.month() == 9) { %>
            <span>October</span>
            <% } %>
            <% if (page.date.month() == 10) { %>
            <span>November</span>
            <% } %>
            <% if (page.date.month() == 11) { %>
            <span>December</span>
            <% } %>
            <span><%- page.date.date() %>,</span>
            <span><%- page.date.year() %></span>
        </div>
        <% } %>

        <h2 class="title"><%= page.title %></h2>
    </div>

    <div class="divider"></div>

    <div class="content">

        <%- page.content %>

    </div>
     <div class="about">
            <h1><%= __('about_this_post') %></h1>
            <p><%= __('this_post_is_written_by') %> <%- config.author %>, <%= __('licensed_under') %> <a
                    href="<%- theme.license_link %>"><%- theme.license %></a>.</p>
        </div>
        <div class="container">
            <div id="gitalk-container"></div>
        </div>
    <% if (!page.no_comments) { %>
        <script>
            var gitalkConfig = {"clientID":"7ef68faf1e8c1e94856b","clientSecret":"cead55a7630c2b3157075c183efbb18b4426bf3c","repo":"MyBlog","owner":"ERHECY","admin":["ERHECY"],"distractionFreeMode":false};
              gitalkConfig.id = md5(location.pathname);
            var gitalk = new Gitalk(gitalkConfig);
              gitalk.render("gitalk-container");
         </script>
        <% if (config.waline) { %>
        <div class="container">
           
            <div id="waline"></div>
            <script>
                new Waline({
                    el: "#waline",
                    <% for (const i in config.waline) { %>
                    <%- i %>: <%- config.waline[i] %>,
                    <% } %>
                });
            </script>
        </div>
        <% } %>
    <% } %>
</article>
